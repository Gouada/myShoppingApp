<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gouadadopavogui.myshoppingapp.ui.FeedBackFragment"
    android:id="@+id/feedBackFgmt"
    android:background="@color/myPurple">

    <!-- TODO: Update blank fragment layout -->

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="*"
    android:paddingTop="@dimen/halfGrid"
    android:paddingBottom="@dimen/halfGrid"
    android:paddingLeft="@dimen/fullGrid"
    android:paddingRight="@dimen/fullGrid"
    android:gravity="left"
    android:background="@color/myPurple">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/FEEDBACK_TITLE"
        android:background="@android:color/white"
        android:ems="15"
        android:id="@+id/feedBackTitle"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:inputType="textMultiLine"
        android:lines="10"
        android:ems="15"
        android:gravity="top"
        android:id="@+id/feedBackContent"
        />
    <Button
        android:id="@+id/feedBack_send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="@string/SEND_FEED_BACK_BUTTON"
        android:layout_marginBottom="10dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>
</LinearLayout>

</FrameLayout>
