<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEF0D2"
    android:paddingTop="@dimen/halfGrid"
    android:paddingBottom="@dimen/halfGrid"
    android:paddingLeft="@dimen/fullGrid"
    android:paddingRight="@dimen/fullGrid"
    android:layout_marginLeft="@dimen/activity_vertical_margin">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_amount_spinner"
        android:spinnerMode="dialog"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        />

    <Button
        android:text="ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_amount_ok_btn" />
</LinearLayout>